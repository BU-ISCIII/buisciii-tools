# module load FastQC

mkdir logs

scratch_dir=$(echo $PWD | sed "s/\/data\/bi\/scratch_tmp/\/scratch/g")

cat ../samples_id.txt | while read in; do echo "mkdir $in; srun --partition short_idx --cpus-per-task 8 --chdir $scratch_dir --output logs/FASTQC.${in}.%j.log fastqc -o $in --nogroup -t 8 -k 8 ../02-preprocessing/${in}/${in}_R1_filtered.fastq.gz ../02-preprocessing/${in}/${in}_R2_filtered.fastq.gz &"; done > _01_rawfastqc.sh

