conda   {
	enabled = true
	autoMounts = true
}

process {
	executor = 'slurm'
	queue = 'middle_idx'
        conda = '/data/bi/pipelines/miniconda3/envs/nf-core-sarek-2.7.1'
        errorStrategy = { task.exitStatus in [140,143,137,138,104,134,139] ? 'retry' : 'finish'; task.exitStatus in [1,4,255] ? 'ignore' : 'finish' }
        maxRetries = 1
        maxErrors = '-1'
}

params {
	max_memory = 376.GB
	max_cpus = 32
	max_time = '48.h'
}
