# module load singularity

scratch_dir=$(echo $PWD | sed 's/\/data\/bi\/scratch_tmp/\/scratch/g')
mkdir logs
cat ../samples_id.txt | xargs -I @@ echo "mkdir @@;srun --chdir ${scratch_dir} --output logs/FASTQC.@@.%j.log --job-name FASTQC --cpus-per-task 8 --mem 8192 --partition short_idx --time 02:00:00 singularity exec /data/bi/pipelines/singularity-images/fastqc:0.11.9--hdfd78af_1 fastqc -o @@ --nogroup -t 8 -k 8 ../00-reads/@@_R1.fastq.gz ../00-reads/@@_R2.fastq.gz &" >> _01_fastqc.sh
